# Sophia AI Context Layer Environment Configuration
# ==================================================

# General Settings
LOG_LEVEL=INFO
CORS_ORIGINS=*

# Database Configuration (Neon)
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=sophia_documents

# OpenRouter / Embedding Configuration
EMBED_ENDPOINT=https://openrouter.ai/api/v1/embeddings
EMBED_MODEL=text-embedding-3-large
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Vector Indexer Settings
CONTINUOUS_MODE=true
RUN_INTERVAL=60
BATCH_SIZE=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# API Port Configuration
PORT=8080