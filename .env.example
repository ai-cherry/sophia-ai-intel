# =============================================================================
# Sophia AI Intel - Comprehensive Environment Configuration
# =============================================================================
# This file contains ALL 121 required environment variables for production deployment
# Use this as a template for your .env.production file
# NEVER commit actual secrets to version control!

# =============================================================================
# CRITICAL SECURITY CONFIGURATION (Required for all deployments)
# =============================================================================

# JWT Authentication Secret - Generate with: openssl rand -base64 64
JWT_SECRET=<GENERATE_SECURE_JWT_SECRET>

# Application Secret Key - Generate with: openssl rand -base64 32
API_SECRET_KEY=<GENERATE_SECURE_API_SECRET>

# Backup Encryption Key - Generate with: openssl rand -base64 32
BACKUP_ENCRYPTION_KEY=<GENERATE_SECURE_BACKUP_KEY>

# =============================================================================
# LLM Configuration (ChatGPT-5 Default)
# =============================================================================

# Primary LLM API Keys
PORTKEY_API_KEY=your_portkey_api_key_here
PORTKEY_CONFIG=your_portkey_config_id_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Model Configuration
DEFAULT_LLM_MODEL=gpt-5
FALLBACK_LLM_MODEL=claude-3-5-sonnet-20241022
CODE_LLM_MODEL=deepseek-coder
FAST_LLM_MODEL=groq-llama-3-70b

# =============================================================================
# Research & Search APIs
# =============================================================================
TAVILY_API_KEY=your_tavily_api_key_here
SERPAPI_API_KEY=your_serper_api_key_here
EXA_API_KEY=your_exa_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database (Production)
POSTGRES_URL=postgresql://sophia:your_secure_password_here@postgres:5432/sophia
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=<YOUR_REDIS_PASSWORD>

# Qdrant Vector Database
QDRANT_URL=http://qdrant:6333

# =============================================================================
# GitHub Integration (Required for MCP-GitHub)
# =============================================================================
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_APP_ID=your_github_app_id_here
GITHUB_INSTALLATION_ID=your_github_installation_id_here
GITHUB_PRIVATE_KEY=<YOUR_GITHUB_PRIVATE_KEY>
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# =============================================================================
# Business Integrations (Required for MCP-Business)
# =============================================================================

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Telegram Integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Salesforce Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here
SALESFORCE_USERNAME=your_salesforce_username_here
SALESFORCE_PASSWORD=your_salesforce_password_here

# HubSpot Integration
HUBSPOT_API_KEY=your_hubspot_api_key_here

# Gong Integration
GONG_API_KEY=your_gong_api_key_here

# Salesforce Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here
SALESFORCE_USERNAME=your_salesforce_username_here
SALESFORCE_PASSWORD=your_salesforce_password_here

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here

# =============================================================================
# Infrastructure & Deployment (Required for MCP-Lambda)
# =============================================================================

# Lambda Labs Configuration
LAMBDA_API_KEY=your_lambda_labs_api_key_here
LAMBDA_CLOUD_ENDPOINT=https://cloud.lambdalabs.com/api/v1
LAMBDA_PRIVATE_SSH_KEY=<YOUR_LAMBDA_PRIVATE_SSH_KEY>
LAMBDA_PUBLIC_SSH_KEY=<YOUR_LAMBDA_PUBLIC_SSH_KEY>

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Jaeger Tracing
JAEGER_ENDPOINT=http://jaeger-collector:14268/api/traces

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=<YOUR_GRAFANA_ADMIN_PASSWORD>

# Arize AI Monitoring
ARIZE_SPACE_ID=your_arize_space_id_here
ARIZE_API_KEY=your_arize_api_key_here

# LangSmith Monitoring
LANGSMITH_API_KEY=your_langsmith_api_key_here

# =============================================================================
# Additional Services & Integrations
# =============================================================================

# Apify Web Scraping
APIFY_API_TOKEN=your_apify_api_token_here

# ZenRows Web Scraping
ZENROWS_API_KEY=your_zenrows_api_key_here

# Together AI
TOGETHER_AI_API_KEY=your_together_ai_api_key_here

# HuggingFace
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here

# =============================================================================
# Application Configuration
# =============================================================================

# Environment Settings
NODE_ENV=production
ENVIRONMENT=production

# Server Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# Build Configuration (Auto-populated by CI/CD)
# =============================================================================
BUILD_ID=local-dev
BUILD_TIMESTAMP=
GIT_COMMIT_SHA=
GIT_BRANCH=main

# =============================================================================
# SSL & Certificate Configuration
# =============================================================================

# Let's Encrypt SSL Configuration
SSL_EMAIL=admin@your-domain.com
SSL_DOMAIN=your-domain.com
SSL_CERT_PATH=/etc/ssl/certs/sophia.crt
SSL_KEY_PATH=/etc/ssl/private/sophia.key

# =============================================================================
# Security Configuration
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_CSP=default-src 'self'
SECURITY_HSTS_MAX_AGE=31536000

# =============================================================================
# Feature Flags & Experimental Features
# =============================================================================

# Enable advanced features
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGGING=false
ENABLE_SSL_REDIRECT=true

# =============================================================================
# Third-party Service Endpoints
# =============================================================================

# External API Endpoints
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRIES=3

# Webhook Endpoints
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# =============================================================================
# Performance & Scaling Configuration
# =============================================================================

# Worker Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Connection Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
REDIS_POOL_MAX=5

# =============================================================================
# Backup & Recovery Configuration
# =============================================================================

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=/app/backups

# Recovery Settings
RECOVERY_TIMEOUT=1800000
RECOVERY_MAX_RETRIES=3

# =============================================================================
# Integration-Specific Configuration
# =============================================================================

# MCP-Agents Configuration
AGENTS_MAX_CONCURRENT=5
AGENTS_TIMEOUT=120000

# MCP-Context Configuration
CONTEXT_EMBEDDING_MODEL=text-embedding-ada-002
CONTEXT_CHUNK_SIZE=1000
CONTEXT_OVERLAP_SIZE=200

# MCP-Research Configuration
RESEARCH_MAX_SOURCES=10
RESEARCH_TIMEOUT=60000

# =============================================================================
# Environment Validation (Used by deployment scripts)
# =============================================================================

# Required Environment Variables Checksum
ENV_CHECKSUM=sha256:your_env_checksum_here

# Deployment Validation
VALIDATE_ENV_ON_STARTUP=true
VALIDATE_SSL_ON_STARTUP=true

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# Security Reminder:
# - Generate all secrets using: ./scripts/generate-secure-secrets.sh
# - Store secrets securely using GitHub Secrets, Pulumi ESC, or similar
# - Rotate secrets every 90 days
# - Never commit actual .env files containing real secrets
# - Use different secrets for each environment (dev/staging/prod)

