# Sophia AI - Unified Environment Configuration
# ==================================================
# This file contains all environment variables needed for the Sophia AI system.
# Copy this file to .env and fill in your actual values.
# Never commit .env files to version control!

# === CORE LLM PROVIDERS ===
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=sk-or-...
PERPLEXITY_API_KEY=pplx-...
XAI_API_KEY=xai-...

# === SEARCH & RESEARCH PROVIDERS ===
TAVILY_API_KEY=tvly-...
SERPER_API_KEY=your-serper-api-key
BRAVE_API_KEY=your-brave-api-key
EXA_API_KEY=your-exa-api-key

# === BUSINESS INTEGRATIONS ===
# HubSpot
HUBSPOT_ACCESS_TOKEN=your-hubspot-access-token
HUBSPOT_API_KEY=your-hubspot-api-key

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

# Gong
GONG_API_KEY=your-gong-api-key
GONG_EMAIL=your-gong-email

# GitHub
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=your-github-private-key
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# === DATABASE & VECTOR STORES ===
# Neon PostgreSQL
NEON_DATABASE_URL=postgresql://user:password@host:port/database

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# === CONTEXT SERVICE CONFIGURATION ===
EMBED_ENDPOINT=https://api.openai.com/v1/embeddings
EMBED_MODEL=text-embedding-3-large
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# === AGENT SWARM CONFIGURATION ===
SWARM_WEBSOCKET_URL=ws://localhost:8100
MAX_CONCURRENT_SWARMS=10
SWARM_TIMEOUT_SECONDS=300

# === LLM ROUTING & CACHING ===
LLM_OPENAI_MODEL=gpt-4-turbo
LLM_ANTHROPIC_MODEL=claude-3-sonnet-20240229
LLM_OPENAI_TEMPERATURE=0.7
LLM_ANTHROPIC_TEMPERATURE=0.7
CACHE_TTL_SECONDS=3600

# === SECURITY & MONITORING ===
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# === DEPLOYMENT CONFIGURATION ===
PORT=3000
NODE_ENV=development
DEBUG=false
